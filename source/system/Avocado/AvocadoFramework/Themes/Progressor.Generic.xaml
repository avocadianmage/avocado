<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:AvocadoFramework"
    xmlns:progress="clr-namespace:AvocadoFramework.Controls.Progress"
    xmlns:text="clr-namespace:AvocadoFramework.Controls.TextRendering">

    <!-- Styling. -->
    <Style TargetType="{x:Type progress:Progressor}">

        <!-- Properties. -->
        <Setter Property="Height" Value="18" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush">
            <Setter.Value>
                <SolidColorBrush Color="{Binding Source=
                    {x:Static local:Config.ProgressorColor}}" />
            </Setter.Value>
        </Setter>

        <!-- Template. -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type progress:Progressor}">

                    <!-- Layout. -->
                    <Border BorderThickness="{TemplateBinding BorderThickness}"
                            BorderBrush="{TemplateBinding BorderBrush}">
                        <Grid>

                            <ProgressBar 
                                Name="progress"
                                Background="Transparent"
                                BorderThickness="0"
                                Minimum="0" 
                                Maximum="100" 
                                Value="{TemplateBinding Value}">
                                <ProgressBar.Foreground>
                                    <SolidColorBrush Color="{Binding Source=
                                        {x:Static local:Config.ProgressorColor}}" />
                                </ProgressBar.Foreground>
                            </ProgressBar>

                            <text:TextLabel 
                                Content="{TemplateBinding Title}"
                                VerticalAlignment="Center"
                                Margin="4 0 0 1">
                                <text:TextLabel.Foreground>
                                    <SolidColorBrush Color="{Binding Source=
                                        {x:Static local:Config.ProgressorTextColor}}" />
                                </text:TextLabel.Foreground>
                            </text:TextLabel>
                            <text:TextLabel
                                Content="{TemplateBinding Status}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Margin="0 0 4 1">
                                <text:TextLabel.Foreground>
                                    <SolidColorBrush Color="{Binding Source=
                                        {x:Static local:Config.ProgressorTextColor}}" />
                                </text:TextLabel.Foreground>
                            </text:TextLabel>

                        </Grid>
                    </Border>

                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>

</ResourceDictionary>
