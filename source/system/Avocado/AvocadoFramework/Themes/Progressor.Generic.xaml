<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:framework="clr-namespace:AvocadoFramework"
    xmlns:progress="clr-namespace:AvocadoFramework.Controls.Progress"
    xmlns:text="clr-namespace:AvocadoFramework.Controls.TextRendering">

    <!-- Configuration settings. -->
    <framework:Config x:Key="Config" />
        
    <!-- Styling. -->
    <Style TargetType="{x:Type progress:Progressor}">

        <!-- Template. -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate 
                    TargetType="{x:Type progress:Progressor}">

                    <!-- Layout. -->
                    <Border Name="border" BorderThickness="1">
                        <Border.BorderBrush>
                            <SolidColorBrush 
                                Color="{Binding 
                                    Source={StaticResource Config}, 
                                    Path=ProgressorColor}" />
                        </Border.BorderBrush>
                        <Grid Width="400" Height="16">
                            
                            <ProgressBar 
                                Name="progress"
                                Background="Transparent"
                                BorderThickness="0"
                                Minimum="0" 
                                Maximum="100" 
                                Value="{TemplateBinding Value}">
                                <ProgressBar.Foreground>
                                    <SolidColorBrush 
                                        Color="{Binding 
                                            Source={StaticResource Config}, 
                                            Path=ProgressorColor}" />
                                </ProgressBar.Foreground>
                            </ProgressBar>

                            <text:TextLabel 
                                Content="{TemplateBinding Title}"
                                Foreground="White"
                                Margin="4,2,4,2" />
                            <text:TextLabel 
                                Content="{TemplateBinding Status}"
                                Foreground="Yellow"
                                HorizontalAlignment="Right"
                                Margin="4,2,4,2" />
                            
                        </Grid>
                    </Border>

                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>

</ResourceDictionary>
