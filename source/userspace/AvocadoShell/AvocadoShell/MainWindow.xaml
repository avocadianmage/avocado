<framework:GlassPane 
    x:Class="AvocadoShell.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:framework="clr-namespace:AvocadoFramework.Engine;assembly=AvocadoFramework"
    xmlns:local="clr-namespace:AvocadoShell"
    xmlns:terminal="clr-namespace:AvocadoShell.Terminal"
    Width="640" Height="460"
    FocusManager.FocusedElement="{Binding ElementName=Terminal}">

    <framework:GlassPane.Resources>
        <local:Config x:Key="Config"/>
    </framework:GlassPane.Resources>
    
    <Grid>
        <terminal:TerminalTextArea 
            x:Name="Terminal"
            Foreground="{Binding Source={StaticResource Config},Path=InputBrush}"/>
    </Grid>

</framework:GlassPane>
