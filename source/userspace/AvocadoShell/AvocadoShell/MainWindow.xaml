<engine:GlassPane 
    x:Class="AvocadoShell.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:engine="clr-namespace:AvocadoFramework.Engine;assembly=AvocadoFramework"
    xmlns:text="clr-namespace:AvocadoFramework.Controls.TextRendering;assembly=AvocadoFramework"
    xmlns:terminal="clr-namespace:AvocadoShell.Terminal"
    Width="640" Height="460"
    FocusManager.FocusedElement="{Binding ElementName=Terminal}">

    <terminal:TerminalTextArea x:Name="Terminal" 
                               Foreground="{x:Static text:TextPalette.LightGray}"
                               IsReadOnly="True"
                               IsUndoEnabled="False" />

</engine:GlassPane>
