<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:AvocadoFramework"
    xmlns:progress="clr-namespace:AvocadoFramework.Controls.Progress"
    xmlns:text="clr-namespace:AvocadoFramework.Controls.TextRendering">

    <!-- Styling. -->
    <Style TargetType="{x:Type progress:Progressor}">

        <!-- Template. -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate 
                    TargetType="{x:Type progress:Progressor}">

                    <!-- Layout. -->
                    <Border Name="border" BorderThickness="1">
                        <Border.BorderBrush>
                            <SolidColorBrush Color="{Binding Source=
                                {x:Static local:Config.ProgressorColor}}" />
                        </Border.BorderBrush>
                        <Grid Width="400" Height="16">
                            
                            <ProgressBar 
                                Name="progress"
                                Background="Transparent"
                                BorderThickness="0"
                                Minimum="0" 
                                Maximum="100" 
                                Value="{TemplateBinding Value}">
                                <ProgressBar.Foreground>
                                    <SolidColorBrush Color="{Binding Source=
                                        {x:Static local:Config.ProgressorColor}}" />
                                </ProgressBar.Foreground>
                            </ProgressBar>

                            <text:TextLabel 
                                Name="title"
                                Content="{TemplateBinding Title}"
                                Margin="4,2,4,2">
                                <text:TextLabel.Foreground>
                                    <SolidColorBrush Color="{Binding Source=
                                        {x:Static local:Config.ProgressorTextColor}}" />
                                </text:TextLabel.Foreground>
                            </text:TextLabel>
                            <text:TextLabel
                                Name="status"
                                Content="{TemplateBinding Status}"
                                HorizontalAlignment="Right"
                                Margin="4,2,4,2">
                                <text:TextLabel.Foreground>
                                    <SolidColorBrush Color="{Binding Source=
                                        {x:Static local:Config.ProgressorTextColor}}" />
                                </text:TextLabel.Foreground>
                            </text:TextLabel>

                        </Grid>
                    </Border>

                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>

</ResourceDictionary>
