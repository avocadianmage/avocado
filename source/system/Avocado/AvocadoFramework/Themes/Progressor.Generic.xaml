<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:AvocadoFramework"
    xmlns:progress="clr-namespace:AvocadoFramework.Controls.Progress"
    xmlns:text="clr-namespace:AvocadoFramework.Controls.TextRendering">

    <!-- Styling. -->
    <Style TargetType="{x:Type progress:Progressor}">

        <!-- Template. -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate 
                    TargetType="{x:Type progress:Progressor}">

                    <!-- Layout. -->
                    <Grid Width="400" Height="18">

                        <ProgressBar 
                                Name="progress"
                                Background="Transparent"
                                BorderThickness="1"
                                Minimum="0" 
                                Maximum="100" 
                                Value="{TemplateBinding Value}">
                            <ProgressBar.Foreground>
                                <SolidColorBrush Color="{Binding Source=
                                        {x:Static local:Config.ProgressorColor}}" />
                            </ProgressBar.Foreground>
                            <ProgressBar.BorderBrush>
                                <SolidColorBrush Color="{Binding Source=
                                        {x:Static local:Config.ProgressorColor}}" />
                            </ProgressBar.BorderBrush>
                        </ProgressBar>

                        <text:TextLabel 
                                Name="title"
                                Content="{TemplateBinding Title}"
                                VerticalAlignment="Center"
                                Margin="4 0 0 1">
                            <text:TextLabel.Foreground>
                                <SolidColorBrush Color="{Binding Source=
                                        {x:Static local:Config.ProgressorTextColor}}" />
                            </text:TextLabel.Foreground>
                        </text:TextLabel>
                        <text:TextLabel
                                Name="status"
                                Content="{TemplateBinding Status}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Margin="0 0 4 1">
                            <text:TextLabel.Foreground>
                                <SolidColorBrush Color="{Binding Source=
                                        {x:Static local:Config.ProgressorTextColor}}" />
                            </text:TextLabel.Foreground>
                        </text:TextLabel>

                    </Grid>

                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>

</ResourceDictionary>
