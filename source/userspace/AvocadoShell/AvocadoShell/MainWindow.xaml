<framework:GlassPane 
    x:Class="AvocadoShell.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:framework="clr-namespace:AvocadoFramework.Engine;assembly=AvocadoFramework"
    xmlns:terminal="clr-namespace:AvocadoShell.Terminal"
    Width="640" Height="460"
    FocusManager.FocusedElement="{Binding ElementName=Terminal}">

    <terminal:TerminalTextArea x:Name="Terminal" 
                               Foreground="#DCDCDC"
                               IsReadOnly="True"
                               IsUndoEnabled="False" />

</framework:GlassPane>
