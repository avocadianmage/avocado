<engine:GlassPane 
    x:Class="AvocadoShell.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:engine="clr-namespace:AvocadoFramework.Engine;assembly=AvocadoFramework"
    xmlns:terminal="clr-namespace:AvocadoShell.UI.Terminal"
    Width="640" Height="460"
    FocusManager.FocusedElement="{Binding ElementName=Terminal}">
    <terminal:TerminalEditor x:Name="Terminal"
                             HorizontalScrollBarVisibility="Disabled"
                             Background="Transparent"
                             Foreground="#dcdcdc"
                             FontFamily="Consolas" 
                             FontSize="10"
                             FontWeight="Bold"
                             TextOptions.TextFormattingMode="Display"
                             IsReadOnly="True" />
</engine:GlassPane>
