<engine:GlassPane x:Class="AvocadoSelector.MainWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:engine="clr-namespace:AvocadoFramework.Engine;assembly=AvocadoFramework"
                  xmlns:selection="clr-namespace:AvocadoFramework.Controls.Selection;assembly=AvocadoFramework"
                  ResizeMode="NoResize"
                  Width="300" SizeToContent="Height"
                  MaxHeight="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Height}">
    <ItemsControl Name="OptionsUI"
                  ItemsSource="{Binding options}" 
                  Focusable="False">
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <selection:OptionItem Content="{Binding Description}" 
                                      IsChecked="{Binding IsChecked}"
                                      Margin="1" 
                                      SingleSelect="{StaticResource SingleSelect}" />
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</engine:GlassPane>
