<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:framework="clr-namespace:AvocadoFramework"
    xmlns:avocadoProgress="clr-namespace:AvocadoFramework.Controls.Progress"
    xmlns:avocadoText="clr-namespace:AvocadoFramework.Controls.TextRendering">

    <!-- Configuration settings. -->
    <framework:Config x:Key="Config" />
        
    <!-- Styling. -->
    <Style TargetType="{x:Type avocadoProgress:Progressor}">

        <!-- Template. -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type avocadoProgress:Progressor}">

                    <!-- Layout. -->
                    <Border Name="border" BorderThickness="1">
                        <Border.BorderBrush>
                            <SolidColorBrush 
                                Color="{Binding 
                                    Source={StaticResource Config}, 
                                    Path=ProgressorColor}" />
                        </Border.BorderBrush>
                        <Grid Width="400" Height="16">
                            <ProgressBar 
                                Name="progress"
                                Background="Transparent"
                                BorderThickness="0"
                                Minimum="0" 
                                Maximum="100" 
                                Value="{TemplateBinding Value}">
                                <ProgressBar.Foreground>
                                    <SolidColorBrush 
                                        Color="{Binding 
                                            Source={StaticResource Config}, 
                                            Path=ProgressorColor}" />
                                </ProgressBar.Foreground>
                            </ProgressBar>
                            
                            <!--<avocadoText:SimpleLabel
                            Content="{TemplateBinding Title}"
                            TextBrush="White"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Width="380" />
                            <avocadoText:SimpleLabel
                            Content="{TemplateBinding Status}"
                            TextBrush="Yellow"
                            Fade="False"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            TextAlign="Right"
                            Width="380" />--><!--ckgtest-->
                            <Label
                                Content="{TemplateBinding Title}"
                                FontFamily="Consolas"
                                FontSize="7.25pt"
                                FontWeight="Bold"
                                TextOptions.TextFormattingMode="Display"
                                Foreground="White"
                                Padding="4,2,4,2" />
                            <Label
                                Content="{TemplateBinding Status}"
                                FontFamily="Consolas"
                                FontSize="7.25pt"
                                FontWeight="Bold"
                                TextOptions.TextFormattingMode="Display"
                                Foreground="Yellow"
                                HorizontalAlignment="Right" 
                                Padding="4,2,4,2" />
                        </Grid>
                    </Border>

                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>

</ResourceDictionary>
